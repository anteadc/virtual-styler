<div class="container">
    <h1>Our Designers</h1>

    <div class="row">
      <% @designers.each do |designer| %>
        <div class="col-12 col-lg-4">
          <div class="designers-card">
            <div class="designer-avatar-name-container">
              <div class="designers-card-avatar">
                <%= cl_image_tag designer.avatar.key, height: 200, width: 200, crop: :fill  %>
              </div>

              <div class="designers-card-name">
                <h2><%= designer.first_name %> </h2>
                <h2><%= designer.last_name %></h2>
              </div>
            </div>

            <div class="designers-page-bio">
              <p><%= designer.bio %></p>
            </div>

              <div class="designers-card-projects-container">
                <%designer.project_photos.each do |photo| %>
                  <div class="designers-card-projects">
                    <%=cl_image_tag photo.key, height: 1000, width: 1000, crop: :fill  %>
                  </div>
                <% end %>
              </div>
              <div class="designers-card-sumbit-button">
                <%= link_to "Show more", custom_path(designer) %>
              </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
