<div class="container px-0 vh-100">
  <legend class="style-legend">
    <a href="javascript:history.back()">
      <span class="greyed-out">Pick a style </span>
    </a>
    <span class="greyed-in">> </span>
    <a href="javascript:history.back()">
      <span class="greyed-out">Pick a room</span>
    </a>
    <span class="greyed-in">> </span>
    <a href="javascript:history.back()">
      <span class="greyed-out">Pick a design</span>
    </a>
    <span class="greyed-in">> Payment</span>

  </legend>
  <h2 class="pt-4">Payment</h2>

  <div class="card-body">
    <div class="row upper"></div>

    <div class="row mb-5">
      <div class="col-12 col-lg-6 mb-5 order-2 order-lg-1 ps-0 pe-2">
        <div class="payment-right" style="position: relative;">
          <h3>Order Summary</h3>
          <div class="row item preset-items-basket" style="margin-left: 0px;">            <div data-controller="basket-sum">
              <%@cart_items.each do |cart_item|%>
                <div class="d-flex item-card align-items-center mb-2" data-basket-sum-target="sum">
                  <%= cl_image_tag cart_item.item.photo.key, :width=>80,:height=>80, :crop=>"fill", class: "item-image p-2"  %>
                  <p class="mt-3 me-5 ps-2">
                    <span class="item-name"><%= cart_item.item.name %></span>
                    <br>
                    <span class="item-description"><%= cart_item.item.description %></span>
                  </p>
                  <div class="cart-input ms-auto me-5 mb-3 d-flex flex-column">
                    <div class="d-flex ">
                      <div>x<span data-basket-sum-target="quantity"><%= cart_item.quantity %></span></div>
                    </div>
                    <p class="item-price">$<span data-basket-sum-target="price"><%=cart_item.item.price%></span></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="payment-total d-flex flex-column justify-content-end card_prire_bottun_2"><div>Your total is: $<span id="sum"></span></div></div>

        </div>
      </div>

      <div class="col-12 col-lg-6 mb-5 order-1 order-lg-2 d-flex ps-2 pe-0">
        <div class="box1">
          <div>
            <h3>Payment</h3>
            <div class="icons">
              <img src="https://img.icons8.com/color/48/000000/visa.png"/>
              <img src="https://img.icons8.com/color/48/000000/mastercard-logo.png"/>
              <img src="https://img.icons8.com/color/48/000000/maestro.png"/>
            </div>


            <form class="mt-4">
              <div>
                <span>Cardholder's name:</span>
                <input class="pay-fild" placeholder="Linda Williams">
                <span>Card Number:</span>
                <input class="pay-fild" placeholder="0125 6780 4567 9909">
                <div class="row">
                  <div class="col-4 expiry-date">
                    <span>Expiry date:</span>
                    <input class="pay-fild" placeholder="YY/MM">
                  </div>
                  <div class="col-4">
                    <span>CVV:</span>
                    <input class="pay-fild" id="cvv">
                  </div>
                </div>
                <div>
                  <input class="pay-fild" type="checkbox" id="save_card" class="align-left">
                  <label for="save_card">Save card details to wallet</label>
                </div>
              </div>
                <div>
                <div class="d-flex flex-column justify-content-end vh-20">
                  <%= link_to "Confirm payment", paymentdone_path, class: "button button-div-basket" %>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
