  <div class="container">


      <% if @preset === nil  %>
        <h1>Bananas, nothing matched query</h1>
      <% else %>

        <div>
         <h3 class="greyed-out">Pick your favorite style > Pick a room to design > <span style="color:black;"> Pick a design</span></h3>
        </div>



            <div class="d-flex">
              <%= cl_image_tag @preset.photo.key, :width => 900, :height=>600, :crop => "fill" %>

            <form id="preset-form"
                  action="/"
                  method="GET">
                <div>
                  <% @preset.items.each do | item | %>
                    <div class="d-flex item-card align-items-center ms-5 mb-2">
                      <%= cl_image_tag item.photo.key, :width=>80,:height=>80, :crop=>"fill", class: "item-image p-2" %>
                      <p class="mt-3 me-5 ps-2"><span class="item-name"><%= item.name %></span>
                        <br>
                        <span class="item-description"><%= item.description %></span>
                      </p>
                      <div class="cart-input ms-auto me-5 mb-3 d-flex flex-column">
                        <div class="d-flex ">
                          <button class="minus">-</button>
                           <input type="text" value="1" class="cart-input" name="<%= item.id %>">
                          <button class="plus">+</button>
                        </div>
                        <p class="item-price"> <%="$ #{item.price}"%></p>
                      </div>
                    </div>
                  <% end %>
                </div>

              <input type="submit" value="Submit">
            </form>





      <% end %>



</div>

<%= console %>
