<div class="container">
  <div class="d-flex">
    <h3 style="color:gray;" class="d-flex justify-content-between;">Pick your favorite style > Pick a room to design > <span style="color:black;"> Pick a design</span></h3>
  </div>

  <% if @preset === nil  %>
    <h1>Bananas, nothing matched query</h1>
  <% else %>
    <div class="d-flex justify-content-between">
      <div>
        <%= image_tag "Modern_LivingRoom/LivingRoom_Main.jpg", alt: "text", width: "900", height: "600" %>
      </div>

      <div class="title_menu" >
        <div class="sidebar">
          <% @preset.items.each do |item| %>
            <div class="card-product">
              <%#= image_tag "Modern_LivingRoom/Closet_LivingRoom.jpg", alt: "text", width: "200", height: "200" %>
              <%= cl_image_tag item.photo.key, height: 200, width: 200, crop: :fill %>
              <div class="card-product-infos">
                <h2><%= item.name %></h2>
                <p><%= item.description %></p>
                <p><%= item.price %></p>
              </div>
            </div>
          <% end %>
        <div>
      </div>
    </div>
  <% end %>
</div>
