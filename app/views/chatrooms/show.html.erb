
<div class="container chatroom">
  <h1>Chat between User: <%= @chatroom.user.first_name %> and Designer: <%= @chatroom.designer.user.first_name %></h1>
  <h1>Chat with <%= @chat_with_user.first_name %> <code> kind of <%= @chat_with_user.designer? ? "Designer" : "Normal User" %></code></h1>

  <div class="messages">
    <% @chatroom.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user.first_name %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>



<%= simple_form_for [@chatroom, @message],
  html: {class: "d-flex"} do |f|
%>
  <%= f.input :content,
    label: false,
    placeholder: "Message ##{@chatroom.id}",
    wrapper_html: {class: "flex-grow-1"}
  %>
  <%= f.submit "Send", class: "btn btn-primary mb-3" %>
<% end %>

<%= console %>

</div>
